<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/black"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="io.github.httponefrenchtoast.soundboard.MainActivity"
        tools:showIn="@layout/activity_main">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="55dp"
            android:text="Витас (Original)"
            android:textColor="@color/black"
            android:background="@color/neonGreen"
            android:id="@+id/textView" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haue"
            android:onClick="clickHandler"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ya_prishel"
            android:onClick="clickHandler"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ху-а-хи"
            android:onClick="clickHandler"
            android:layout_below="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="А-а-а-а"
            android:onClick="clickHandler"
            android:layout_above="@+id/button5"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бл-рл-рл Ла-а-а"
            android:onClick="clickHandler"
            android:layout_below="@+id/button3"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="50dp"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-a-a (Full)"
            android:onClick="clickHandler"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chandra"
            android:onClick="clickHandler"
            android:layout_below="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="из хрустальных слёз"
            android:onClick="clickHandler"
            android:layout_alignTop="@+id/button9"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Из мира грёз"
            android:onClick="clickHandler"
            android:layout_below="@+id/button11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Для любви"
            android:onClick="clickHandler"
            android:layout_alignTop="@+id/button11"
            android:layout_alignLeft="@+id/button12"
            android:layout_alignStart="@+id/button12" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chandra (Full)"
            android:onClick="clickHandler"
            android:layout_below="@id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оу-уо-уо"
            android:onClick="clickHandler"
            android:layout_below="@+id/button6"
            android:layout_alignRight="@+id/button6"
            android:layout_alignEnd="@+id/button6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vitas"
            android:id="@+id/imageView"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/mortTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Никита Деев (Coming Soon)"
            android:textColor="@color/black"
            android:background="@color/neonGreen"
            android:layout_below="@+id/button9"
            />

           </RelativeLayout>
</ScrollView>
