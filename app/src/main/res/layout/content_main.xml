            android:layout_alignLeft="@+id/button10"
            android:layout_alignStart="@+id/button10" />

        <Button
            android:id="@+id/button31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/run"
            android:onClick="clickHandler"
            android:layout_alignTop="@+id/button33"
            android:layout_toRightOf="@+id/button33"
            android:layout_toEndOf="@+id/button33" />

        <Button
            android:id="@+id/button32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sex"
            android:onClick="clickHandler"
            android:layout_below="@+id/button26"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nightmare"
            android:onClick="clickHandler"
            android:layout_below="@id/terryImageView" />





















