            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/canDo"
            android:onClick="clickHandler"
            android:layout_below="@+id/meeseekImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lookAtMe"
            android:onClick="clickHandler"
            android:layout_alignTop="@+id/button16"
            android:layout_alignLeft="@+id/button14"
            android:layout_alignStart="@+id/button14" />


        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allDie"
            android:onClick="clickHandler"
            android:layout_below="@+id/button17"
            android:layout_alignLeft="@+id/button14"
            android:layout_alignStart="@+id/button14" />

        <Button
            android:id="@+id/button20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wannaDie"
            android:onClick="clickHandler"
            android:layout_below="@+id/button16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/failures"
            android:onClick="clickHandler"
            android:layout_below="@+id/button20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/killHim"
            android:onClick="clickHandler"
            android:layout_below="@+id/button21"
            />

        <Button
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ooo"
            android:onClick="clickHandler"
            android:layout_below="@+id/button19"
            android:layout_alignLeft="@+id/button14"
            android:layout_alignStart="@+id/button14" />

        <Button
            android:id="@+id/button24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shortGame"
            android:onClick="clickHandler"
            android:layout_below="@+id/button23"
            android:layout_alignLeft="@+id/button14"
            android:layout_alignStart="@+id/button14" />

        <Button
            android:id="@+id/button25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pain"
            android:onClick="clickHandler"
            android:layout_below="@+id/button22"
            />

        <TextView
            android:id="@+id/terryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scary Terry"
            android:textColor="@color/black"
            android:background="@color/neonGreen"
            android:layout_below="@+id/button25"
            />

        <ImageView
            android:id="@+id/terryImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scarry_terry"
            android:layout_below="@+id/terryTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aww"
            android:onClick="clickHandler"
            android:layout_below="@+id/button28"
            />

        <Button
            android:id="@+id/button27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/late"
            android:onClick="clickHandler"
            android:layout_below="@+id/button33"
            android:layout_toRightOf="@+id/button5"
            android:layout_toEndOf="@+id/button5" />

        <Button
            android:id="@+id/button28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terryPants"
            android:onClick="clickHandler"
            android:layout_below="@+id/button33"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
